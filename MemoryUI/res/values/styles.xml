<?xml version="1.0" encoding="utf-8"?>

<resources
	xmlns:core="http://schemas.android.com/apk/res/com.dailystudio.memory" xmlns:android="http://schemas.android.com/apk/res/android">
	
    <style name="Theme" parent="android:Theme">
    </style>
    
    <style name="Theme.DefaultActivity">
		<item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
	</style>
	
    <style name="Theme.DefaultActivity.Light">
        <item name="android:windowBackground">@color/white</item>
    </style>
    
    <style name="Theme.Translucent" parent="android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">#fff</item>
    </style>
    
    <style name="Theme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
		<item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">#fff</item>
    </style>

	<style name="DefaultText">
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/light_black</item>
		<item name="android:textSize">@dimen/default_font_size</item>
	</style>

	<style name="DefaultButton">
		<item name="android:background">@drawable/default_button</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/default_button_text_color</item>
		<item name="android:textSize">@dimen/default_font_size</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">@dimen/default_button_padding</item>
	</style>
	
	<style name="DefaultCheck" parent="DefaultText">
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:paddingTop">@dimen/default_check_padding</item>
		<item name="android:paddingBottom">@dimen/default_check_padding</item>
	</style>

	<style name="DefaultCheck.Light">
		<item name="android:button">@drawable/default_light_check</item>
	</style>

	<style name="DefaultCheck.Dark">
		<item name="android:button">@drawable/default_dark_check</item>
	</style>

	<style name="DefaultListItemText" parent="DefaultText">
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textSize">@dimen/lv_item_font_size</item>
		<item name="android:padding">@dimen/lv_item_padding</item>
		<item name="android:textStyle">bold</item>
		<item name="android:singleLine">true</item>
	</style>
	
	<style name="DefaultListItemText1stLine" parent="DefaultListItemText">
		<item name="android:paddingLeft">@dimen/lv_item_padding</item>
		<item name="android:paddingRight">@dimen/lv_item_padding</item>
		<item name="android:paddingTop">0dp</item>
		<item name="android:paddingBottom">0dp</item>
	</style>
	
	<style name="DefaultListItemText2ndLine">
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textColor">@color/gray</item>
		<item name="android:textSize">@dimen/lv_item_2nd_font_size</item>
		<item name="android:paddingLeft">@dimen/lv_item_padding</item>
		<item name="android:paddingRight">@dimen/lv_item_padding</item>
		<item name="android:paddingTop">@dimen/lv_item_2nd_vpadding</item>
		<item name="android:paddingBottom">@dimen/lv_item_2nd_vpadding</item>
		<item name="android:singleLine">true</item>
	</style>
	
	<style name="DefaultGridItemText" parent="DefaultListItemText">
		<item name="android:gravity">center</item>
	</style>
	
	<style name="DefaultLabel">
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textColor">@color/light_black</item>
		<item name="android:textSize">@dimen/default_font_size</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">@dimen/default_label_padding</item>
	</style>

	<style name="ActiveLabel" parent="DefaultLabel">
		<item name="android:textColor">@color/android_blue</item>
	</style>

	<style name="DefaultEditText">
		<item name="android:textSize">@dimen/default_font_size</item>
		<item name="android:background">@drawable/edit_text_light</item>
		<item name="android:inputType">textMultiLine</item>
	</style>

	<style name="DefaultScrollView">
		<item name="android:scrollbarThumbVertical">@drawable/scrollbar_handle</item>
		<item name="android:scrollbarThumbHorizontal">@drawable/scrollbar_handle</item>
		<item name="android:scrollbarStyle">insideOverlay</item>
	</style>
			
	<style name="DefaultAdapterView" parent="DefaultScrollView">
		<item name="android:clipChildren">false</item>
		<item name="android:clipToPadding">false</item>
		<item name="android:cacheColorHint">@color/transparent</item>
		<item name="android:persistentDrawingCache">animation|scrolling</item>
		<item name="android:divider">@drawable/list_divider</item>
		<item name="android:listSelector">@drawable/list_selector_light</item>
	</style>
	
	<style name="DefaultListView" parent="DefaultAdapterView">
		<item name="android:layoutAnimation">@anim/list_layout_anim</item>
	</style>
	
	<style name="DefaultListView.NoAnim" parent="DefaultAdapterView">
	</style>
	
	<style name="DefaultGridView" parent="DefaultAdapterView">
		<item name="android:layoutAnimation">@anim/grid_layout_anim</item>
		<item name="android:numColumns">2</item>
		<item name="android:horizontalSpacing">@dimen/gv_item_hpadding</item>
		<item name="android:verticalSpacing">@dimen/gv_item_vpadding</item>
	</style>

	<style name="DefaultGridView.NoAnim" parent="DefaultAdapterView">
		<item name="android:numColumns">2</item>
		<item name="android:horizontalSpacing">@dimen/gv_item_hpadding</item>
		<item name="android:verticalSpacing">@dimen/gv_item_vpadding</item>
	</style>
	
	<style name="DefaultPagerTitleStrip">
		<item name="android:paddingBottom">8dp</item>
		<item name="android:paddingTop">9dp</item>
		<item name="android:textColor">@color/light_black</item>
		<item name="android:textSize">@dimen/default_pager_title_font_size</item>
	</style>
	
	<style name="DefaultDarkPagerTitleStrip" parent="DefaultPagerTitleStrip">
		<item name="android:background">@color/action_bar_bg_color</item>
	    <item name="android:textColor">@color/light_white</item>
	</style>
	
	<style name="DefaultIndicatorRatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/ratingbar_light</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_light</item>
        <item name="android:minHeight">38dip</item>
        <item name="android:maxHeight">38dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="DefaultSmallRatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/ratingbar_small_light</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_small_light</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>
	
    <style name="DefaultDarkIndicatorRatingBar" parent="DefaultIndicatorRatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_dark</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_dark</item>
    </style>

    <style name="DefaultDarkSmallRatingBar" parent="DefaultSmallRatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_small_dark</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_small_dark</item>
    </style>
    
	<style name="DefaultWebView">
		<item name="android:scrollbarThumbVertical">@drawable/scrollbar_handle</item>
		<item name="android:scrollbarThumbHorizontal">@drawable/scrollbar_handle</item>
		<item name="android:scrollbarStyle">insideOverlay</item>
	</style>
    
    	
	<style name="ActionBarText">
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/action_bar_text_color</item>
		<item name="android:textSize">@dimen/action_bar_text_size</item>
	</style>
	
	<style name="ActionBarTitleText" parent="ActionBarText">
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="ActionBarPromptText" parent="ActionBarText">
		<item name="android:gravity">left|center_vertical</item>
	    <item name="android:textStyle">italic</item>
	</style>

	<style name="ActionBarOverflowMenuItemText" parent="DefaultListItemText">
	    <item name="android:textColor">@color/menu_item_color</item>
		<item name="android:textSize">@dimen/actbar_overflow_menu_text_size</item>
		<item name="android:padding">@dimen/actbar_overflow_menu_item_padding</item>
		<item name="android:singleLine">true</item>
	</style>
	
	<style name="Animation" />
 	
	<style name="Animation.DropDownDown">
        <item name="android:windowEnterAnimation">@anim/grow_fade_in</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out</item>
    </style>

    <style name="Animation.DropDownUp">
        <item name="android:windowEnterAnimation">@anim/grow_fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>
	
    <style name="Animation.DropDownCenter">
        <item name="android:windowEnterAnimation">@anim/grow_fade_in_center</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_center</item>
    </style>
	
	<style name="MemoryIndexText" parent="DefaultText">
	    <item name="android:textColor">@color/light_gray</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">@dimen/memory_index_font_size</item>
		<item name="android:padding">@dimen/memory_index_padding</item>
		<item name="android:textStyle">bold</item>
		<item name="android:singleLine">true</item>
	</style>
	
	<style name="DurationCountViewText" parent="DefaultText">
	    <item name="android:gravity">right|center_vertical</item>
		<item name="android:textStyle">bold</item>
		<item name="minDigits">2</item>
	</style>
		
	<style name="AskBoardText" parent="DefaultText">
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="AskQuestionContent" parent="DefaultText">
	    <item name="android:gravity">left|center_vertical</item>
		<item name="android:padding">@dimen/ask_question_content_padding</item>
	</style>
	
	<style name="NotifyText" parent="DefaultText">
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="NotifyContent" parent="DefaultText">
	    <item name="android:gravity">center</item>
		<item name="android:padding">@dimen/notification_content_padding</item>
	</style>
		
	<style name="BottomFloatingWindowTitle" parent="DefaultLabel">
	    <item name="android:singleLine">true</item>
	</style>
    
	<style name="BottomFloatingWindowButton" parent="DefaultButton">
	    <item name="android:background">@drawable/actbar_button</item>
	</style>
	
 	<style name="PaperClipTitle" parent="DefaultLabel">
	    <item name="android:textSize">@dimen/paper_clip_title_font_size</item>
	    <item name="android:singleLine">true</item>
	</style>
    
 	<style name="CoreAppCheckExplainText" parent="DefaultLabel">
	    <item name="android:gravity">left|center_vertical</item>
	</style>
	
 	<style name="CoreAppCheckStepText" parent="CoreAppCheckExplainText">
	    <item name="android:textColor">@color/core_app_check_step_text_color</item>
 	  	<item name="android:textStyle">normal</item>
	</style>
	
 	<style name="CoreAppCheckStepListText" parent="DefaultListItemText">
	    <item name="android:textColor">@color/core_app_check_step_text_color</item>
	</style>
 		
 	<style name="CoreAppCheckResultText" parent="CoreAppCheckStepText">
 	  	<item name="android:gravity">left|center_vertical</item>
	</style>
	
	<style name="DefaultEmptyText" parent="DefaultLabel">
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/light_gray</item>
		<item name="android:textSize">@dimen/default_empty_text_font_size</item>
		<item name="android:textStyle">bold|italic</item>
	</style>
	
	<style name="DefaultAppWidgetLabel">
		<item name="android:textColor">@color/black</item>
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textSize">@dimen/app_widget_label_font_size</item>
		<item name="android:textStyle">bold|italic</item>
		<item name="android:padding">@dimen/app_widget_label_padding</item>
	</style>
	
	<style name="DefaultAppWidgetTitle" parent="DefaultAppWidgetLabel">
		<item name="android:padding">@dimen/app_widget_title_padding</item>
	</style>
	
	<style name="DefaultAppWidgetButton">
		<item name="android:background">@drawable/app_widget_btn</item>
	</style>
	
	<style name="CardTitle" parent="DefaultText">
		<item name="android:gravity">right|center_vertical</item>
		<item name="android:textColor">@color/semi_white</item>
		<item name="android:textSize">@dimen/card_title_text_size</item>
		<item name="android:textStyle">italic</item>
	</style>
	
    <style name="CardFragmentTitle" parent="DefaultLabel">
		<item name="android:gravity">right|center_vertical</item>
		<item name="android:textColor">@color/semi_white</item>
		<item name="android:textStyle">bold|italic</item>
	</style>
			
</resources>